generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model engineer {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique
  password           String
  // friend   Friend    @relation(fields: [userId], references: [id])
  unlock_achievement unlock_achievement[]
}

model achievement {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique
  description        String               @unique
  difficulty_level   Int
  unlock_achievement unlock_achievement[]
}

model unlock_achievement {
  id             Int         @id @default(autoincrement())
  achievement_id Int
  engineer_id    Int
  achievement    achievement @relation(fields: [achievement_id], references: [id])
  engineer       engineer    @relation(fields: [engineer_id], references: [id])

  @@unique([achievement_id, engineer_id])
}
